<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div clas="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>
<h2>Posts></h2>
  <% if users_posts(@user) %>
    <%= render @user.posts %>
  <% else %>
    <p><%= @user.name %> has not made a post.</p>
  <% end %>

<h2>Comments</h2>
  <% if users_comments(@user) %>
    <%= render @user.comments %>
  <% else %>
      <p><%= @user.name %> has not made a comment on a post.</p>
  <% end %>

<h2>Favorites</h2>
  <% if users_favorites(@user) %>
    <%= render @user.favorites %>
  <% else %>
    <p><%= @user.favorites %> has no favorites.</p>
  <% end %>
