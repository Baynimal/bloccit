<h1>Edit Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Questions</p>
    <ul>
      <li>Don't ask questions when you dont want the answer.</li>
      <li>There is a such thing as a stupid question.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |q| %>
      <div class="form-group">
        <%= q.label :title %>
        <%= q.text_field :title, class: 'form-control', placeholder: "Enter Question Title" %>
      </div>
      <div class="form-group">
        <%= q.label :body %>
        <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Question Body" %>
      </div>
      <div class="form-group">
        <%= q.label :resolved %>
        <%= q.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= q.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>
</div>
